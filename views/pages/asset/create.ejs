<%- include('../../templates/header') %>
    <div class="row">
        <div class="col-12">
            <h1 class="mb-5">Add Data Asset</h1>
            <form action="add-asset" method="post">
                <div class="form-group">
                    <label for="name">Select Family</label>
                   <select name="family_id" id="family_id" class="form-control">
                    <option value="">--select --</option>
                       <% family.map((el)=>{ %>
                        <option value="<%= el.id %>" <%= typeof old !== 'undefined' ? old.family_id == el.id ? 'selected' : '' : '' %>><%= el.name %></option>
                    <% }) %>
                   </select>
                    <% if(typeof errors !== 'undefined'){ %>
                        <% errors.length > 0 ? errors.map((el,_index)=>{ %>
                            <div class="text-danger text-small">
                                <%= el?.family_id %>
                            </div>
                        <% }) : null %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" value="<%= typeof old !== 'undefined' ? old?.name : '' %>" placeholder="Input name" class="form-control">
                    <% if(typeof errors !== 'undefined'){ %>
                        <% errors.length > 0 ? errors.map((el,_index)=>{ %>
                            <div class="text-danger text-small">
                                <%= el?.name %>
                            </div>
                        <% }) : null %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input type="number" name="price" value="<%= typeof old !== 'undefined' ? old?.price : '' %>" placeholder="Input price" class="form-control">
                    <% if(typeof errors !== 'undefined'){ %>
                        <% errors.length > 0 ? errors.map((el,_index)=>{ %>
                            <div class="text-danger text-small">
                                <%= el?.price %>
                            </div>
                        <% }) : null %>
                    <% } %>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/" class="btn btn-warning">Back</a>
                </div>
            </form>
        </div>
    </div>
<%- include('../../templates/footer') %>
